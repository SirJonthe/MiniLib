#ifndef MPLALLOC_H_INCLUDED__
#define MPLALLOC_H_INCLUDED__

#include "mplCommon.h"

namespace mpl
{
	template < typename type_t >
	type_t *alloc_mem(int elem_count)
	{
		return (type_t*)((new char[elem_count*sizeof(type_t) + MPL_BYTE_ALIGN] + MPL_BYTE_ALIGN) & MPL_BYTE_ALIGN_MASK);
	}

	void free_mem(void *mem)
	{
		// memory leak if the memory was alig
		delete [] mem;
	}
}

#endif // MPLALLOC_H_INCLUDED__
